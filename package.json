{
  "name": "jotter-app",
  "productName": "Jotter",
  "version": "1.0.0",
  "private": true,
  "description": "Lightweight, blazingly fast, note taking app.",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "npm run clean && npm-run-all -p watch:renderer serve:electron",
    "serve:electron": "wait-on ./dist/renderer/write-index.html && npm run dev:electron",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.ts --mode=development && npm run start:electron",
    "watch:all": "npm-run-all -p watch:renderer watch:electron",
    "watch:electron": "cross-env NODE_ENV=development webpack --watch --config webpack/electron.webpack.ts --mode=development",
    "watch:renderer": "cross-env NODE_ENV=development webpack --watch --config webpack/renderer.webpack.ts --mode=development",
    "start:electron": "electron .",
    "build": "npm-run-all build:electron build:renderer",
    "build:run": "npm-run-all build start:electron",
    "build:electron": "webpack --config webpack/electron.webpack.ts --mode=production",
    "build:renderer": "webpack --config webpack/renderer.webpack.ts --mode=production",
    "package": "electron-forge package",
    "package:dist": "electron-builder --dir",
    "clean": "rm -rf ./dist",
    "clean-build": "npm-run-all clean build",
    "test": "jest --verbose",
    "start": "electron-forge start",
    "make": "electron-forge make",
    "build-make": "npm run clean-build && npm run make"
  },
  "keywords": [],
  "author": {
    "name": "fDynamo",
    "email": "fontaine.dynamo@gmail.com",
    "url": "https://www.jotterapp.co"
  },
  "license": "MIT",
  "dependencies": {
    "auto-launch": "^5.0.6",
    "dotenv": "^16.3.1",
    "easymde": "^2.18.0",
    "electron-default-menu": "^1.0.2",
    "electron-settings": "^4.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-simplemde-editor": "^5.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "@types/auto-launch": "^5.0.5",
    "@types/jest": "^29.5.7",
    "@types/node": "^16.11.45",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^6.x",
    "@typescript-eslint/parser": "^6.x",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^19.0.8",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.1",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.7.0",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "sass": "^1.66.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.2.2",
    "wait-on": "^6.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.13.0"
  }
}
