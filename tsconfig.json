{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      // Also modify in jest.config.ts
      "@renderer/*": ["./src/renderer/*"],
      "@main/*": ["./src/main/*"],
      "@custom_dependencies/*": ["./src/custom_dependencies/*"],
      "@src/*": ["./src/*"]
    }
  }
}
